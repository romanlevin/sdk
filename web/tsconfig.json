{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2016", "dom", "es5"],
    "sourceMap": true,
    "outDir": "./lib",
    "typeRoots": ["./src", "./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}
